<launch>
    <arg name="map_file" default="$(find trabalho_slam)/maps/mapa_laboratorio.yaml" />

    <node pkg="map_server" type="map_server" name="map_server" args="$(arg map_file)" />

    <node pkg="amcl" type="amcl" name="amcl">
        <rosparam file="$(find trabalho_slam)/config/amcl_params.yaml" command="load" />
        <remap from="scan" to="/scan"/>
    </node>

    
    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    
        <rosparam file="$(find trabalho_slam)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find trabalho_slam)/config/global_costmap_params.yaml" command="load" ns="global_costmap" />
        
        <rosparam file="$(find trabalho_slam)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find trabalho_slam)/config/local_costmap_params.yaml" command="load" ns="local_costmap" />
        
        <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
        
        <rosparam file="$(find trabalho_slam)/config/dwa_local_planner_params.yaml" command="load" ns="DWAPlannerROS" />
        
        <remap from="odom" to="/odom"/>
    </node>
    

    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find trabalho_slam)/rviz/navegacao.rviz" />

</launch>
